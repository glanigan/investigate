<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoadApplication</servlet-name>
        <servlet-class>com.investigate.servlets.CreateApplication</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewApplication</servlet-name>
        <servlet-class>com.investigate.servlets.ViewApplication</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewReferals</servlet-name>
        <servlet-class>com.investigate.servlets.ViewReferals</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewRules</servlet-name>
        <servlet-class>com.investigate.servlets.ViewRules</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoadApplication</servlet-name>
        <url-pattern>/LoadApplication</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewApplication</servlet-name>
        <url-pattern>/ViewApplication</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewReferals</servlet-name>
        <url-pattern>/ViewReferals</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewRules</servlet-name>
        <url-pattern>/ViewRules</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
